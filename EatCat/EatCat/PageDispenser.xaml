<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EatCat.PageDispenser">
    <ContentPage.Content>
        <Grid Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackLayout Spacing="5" HorizontalOptions="FillAndExpand"  Grid.Row="0" Grid.Column="1">
               <Label Text="{Binding NomeAlimentador}" HorizontalOptions="FillAndExpand"></Label>
                <Button Text="Servir Comida" HorizontalOptions="FillAndExpand" x:Name="btnServirComida" Clicked="btnServirComida_Clicked"></Button> 
            </StackLayout>
            
         
            
        </Grid>
     
    </ContentPage.Content>
</ContentPage>